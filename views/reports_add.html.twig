{% extends "layout.html.twig" %}
{% set reportMenu = true %}

{% block title %}Ajout de rapports{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
<div class="well">
    <form class="form-horizontal" role="form" action="/report/results/" method="post">
        <div class="form-group">
            <label class="col-sm-2 col-sm-offset-1 control-label">Nom de practicien</label>
            <div class="col-sm-7">
                <select class="form-control" name="practitioners">
                    {% for practitioner in practitioners %}
                        <option value="{{ practitioner.firstName }}">{{ practitioner.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 col-sm-offset-5">
                <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-add"></span> Ajouter</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}