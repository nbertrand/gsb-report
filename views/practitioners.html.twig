{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}Practiciens{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if drugs %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Type</th>
                </tr>
            </thead>
            {% for practitioner in practitioners %}
                <tr>
                    <td><a href="/practitioner/{{ practitioner.id }}">{{ practitioner.name }}</a></td>
                    <td>{{ practitioner.type.type_name_p }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun practicien trouv√©.</div>
{% endif %}   
{% endblock %}