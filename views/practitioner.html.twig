{% extends "layout.html.twig" %}
{% set drugMenu = true %}

{% block title %}{{ practitioner.name }}{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    <div class="well">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label">Type de practicien</label>
                <div class="col-sm-9">
                    <p class="form-control-static">{{ practitioner.type.type_name_p }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Nom du practitien</label>
                <div class="col-sm-9">
                    <p class="form-control-static">{{ practitioner.name }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Prénom practicien</label>
                <div class="col-sm-9">
                    <p class="form-control-static">{{ practitioner.firstName }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Adresse</label>
                <div class="col-sm-9">
                    <p class="form-control-static">{{ practitioner.address }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Code Postal</label>
                <div class="col-sm-9">
                    <p class="form-control-static">{{ practitioner.zipCode }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Ville</label>
                <div class="col-sm-9">
                    <p class="form-control-static">{{ practitioner.city }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Coefficient de notoriété</label>
                <div class="col-sm-9">
                    <p class="form-control-static">{{ practitioner.notorietyCoefficient }}</p>
                </div>
        </form>
    </div>
{% endblock %}